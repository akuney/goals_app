<!DOCTYPE html>
<html>
<head>
  <title>GoalSetter</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= debug params %>
  <%= session[:session_token]%>


  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <% if logged_in? %>
    <%= current_user.username %>
    <%= button_to "Log Out", session_url, method: :delete %>
  <% else %>
    <%= link_to "Sign Me Up", new_user_url %>
    <%= link_to "Log Me In", new_session_url %>
  <% end %>

<%= yield %>

</body>
</html>
